<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogKatta - Edit Blog</title>
    <link rel="stylesheet" href="/styles/themes/light-theme.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/edit.css">
</head>
<body>
    <div id="main">
        <div id="sidebar">
            <%- include("partials/sidebar.ejs") %>
        </div>
        <div id="blog">
            <div id="header">
                <%- include("partials/header.ejs") %>
            </div>
            <div id="content">
                <div class="user-topbar">
                    <%- include("partials/user_topbar") %>
                </div>
                <div id="edit-post">
                   <form action="/user_post/edit/<%= post.id %>" method="POST">
                        <div class="post">
                            <div class="form-row">
                                <div class="title">
                                    <label for="title">Title :- </label>
                                    <input type="text" name="title" id="title" value="<%= post.title %>" required>
                                </div>
                                <div class="author">
                                    <label for="author">Author :- </label>
                                    <input type="text" name="author" id="author" value="<%= post.author_name %>">
                                </div>
                            </div> 
                            <div class="content">
                                <textarea name="content" id="content" required><%= post.content %></textarea>
                            </div>
                            <div class="submit-Btn">
                                <button class="update" type="submit">Update Post</button>
                                <a href="/home" class="cancel">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div id="footer">
                <%- include("partials/footer.ejs") %>
            </div>
        </div>
    </div>
    <script src="/scripts/sidebar.js"></script>
</body>
</html>

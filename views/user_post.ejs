<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Web Blog Application</title>
    <link rel="stylesheet" href="/styles/themes/light-theme.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/blog.css">
    <link rel="stylesheet" href="/styles/user_post.css">
</head>
<body>
    <div id="main">
        <div id="sidebar">
            <%- include("partials/sidebar.ejs") %>
        </div>
        
        <div id="blog">
            <div id="header">
                <%- include("partials/header.ejs") %>
            </div>
            
            <div id="content">
                <div class="user-topbar">
                    <%- include("partials/user_topbar") %>
                </div>
                <div class="blog">
                    <% if(posts && posts.length > 0) { %>
                        <% posts.forEach(function (post, idx) { %>
                            <%- include("partials/post_card", { post: post, fullView: true, showControls: true }) %>
                        <% }) %>
                        
                    <% } else { %>
                        <a href="/create">
                            <div class="no-post">
                                <p>You haven't posted anything yet.</p>
                                <p>Click here to post a blog</p>
                            </div>
                        </a>
                    <% } %>    
                </div>
            </div>
            <div id="footer">
                <%- include("partials/footer.ejs") %>
            </div>
        </div>
    </div>
    <script src="/scripts/sidebar.js"></script>
</body>
</html>

